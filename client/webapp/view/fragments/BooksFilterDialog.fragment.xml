<core:FragmentDefinition
    xmlns="sap.m"
    xmlns:core="sap.ui.core"
>
    <ViewSettingsDialog
        id="settingsDialog"
        confirm="onBooksFilterDialogConfirm"
        resetFilters="onFiltersReset('bookDateFilter')"
        cancel="onFilterCancel('bookDateFilter')"
    >
        <filterItems>
            <ViewSettingsFilterItem
                text="{i18n>BookTitleLabel}"
                key="bookFilter"
                items="{appModel>books}"
            >
                <items>
                    <ViewSettingsItem
                        text="{appModel>title}"
                        key="name_Contains_{appModel>title}_X"
                    />
                </items>
            </ViewSettingsFilterItem>

            <ViewSettingsFilterItem
                text="{i18n>BookSubtitleLabel}"
                key="bookSubtitleFilter"
                items="{appModel>books}"
            >
                <items>
                    <ViewSettingsItem
                        text="{appModel>subtitle}"
                        key="subtitle_Contains_{appModel>subtitle}_X"
                    />
                </items>
            </ViewSettingsFilterItem>

            <ViewSettingsFilterItem
                text="{i18n>BookAuthorsLabel}"
                key="bookAuthorsFilter"
                items="{appModel>books}"
            >
                <items>
                    <ViewSettingsItem
                        text="{appModel>authors}"
                        key="authors_Contains_{appModel>authors}_X"
                    />
                </items>
            </ViewSettingsFilterItem>

            <ViewSettingsFilterItem
                text="{i18n>BookPublisherLabel}"
                key="bookPublisherFilter"
                items="{appModel>books}"
            >
                <items>
                    <ViewSettingsItem
                        text="{appModel>publisher}"
                        key="publisher_Contains_{appModel>publisher}_X"
                    />
                </items>
            </ViewSettingsFilterItem>

            <ViewSettingsFilterItem
                text="{i18n>BookIsbnLabel}"
                key="bookIsbnFilter"
                items="{appModel>books}"
            >
                <items>
                    <ViewSettingsItem
                        text="{appModel>isbn13}"
                        key="isbn13_Contains_{appModel>isbn13}_X"
                    />
                </items>
            </ViewSettingsFilterItem>

            <ViewSettingsFilterItem
                text="{i18n>BookPagesLabel}"
                key="bookPagesFilter"
                multiSelect="false"
            >
                <items>
                    <ViewSettingsItem
                        text="{i18n>PagesFilterTextLE100}"
                        key="pages_LE_100_X"
                    />
                    <ViewSettingsItem
                        text="{i18n>PagesFilterTextBT100_200}"
                        key="pages_BT_100_200"
                    />
                    <ViewSettingsItem
                        text="{i18n>PagesFilterTextBT200_400}"
                        key="pages_BT_200_400"
                    />
                    <ViewSettingsItem
                        text="{i18n>PagesFilterTextBT400_600}"
                        key="pages_BT_400_600"
                    />
                    <ViewSettingsItem
                        text="{i18n>PagesFilterTextBT600_800}"
                        key="pages_BT_600_800"
                    />
                    <ViewSettingsItem
                        text="{i18n>PagesFilterTextBT800_1000}"
                        key="pages_BT_800_1000"
                    />
                    <ViewSettingsItem
                        text="{i18n>PagesFilterTextGT1000}"
                        key="pages_GT_1000_X"
                    />
                </items>
            </ViewSettingsFilterItem>

            <ViewSettingsCustomItem
                id="bookDateFilter"
                text="{i18n>BookDateLabel}"
                key="bookDateFilter"
            >
                <customControl>
                    <DatePicker change="onBooksDatePickerChange" />
                </customControl>
            </ViewSettingsCustomItem>

              <ViewSettingsFilterItem
                text="{i18n>BookRatingLabel}"
                key="bookRatingFilter"
                multiSelect="false"
            >
                <items>
                    <ViewSettingsItem
                        text="5"
                        key="rating_EQ_5_X"
                    />
                    <ViewSettingsItem
                        text="4"
                        key="rating_EQ_4_X"
                    />
                     <ViewSettingsItem
                        text="3"
                        key="rating_EQ_3_X"
                    />
                     <ViewSettingsItem
                        text="2"
                        key="rating_EQ_2_X"
                    />
                     <ViewSettingsItem
                        text="1"
                        key="rating_EQ_1_X"
                    />
                </items>
            </ViewSettingsFilterItem>

            <ViewSettingsFilterItem
                text="{i18n>BookPriceLabel}"
                key="bookPriceFilter"
                multiSelect="false"
            >
                <items>
                    <ViewSettingsItem
                        text="{i18n>PriceFilterTextLE20}"
                        key="price_LE_20_X"
                    />
                    <ViewSettingsItem
                        text="{i18n>PriceFilterTextBT20_50}"
                        key="price_BT_20_50"
                    />
                     <ViewSettingsItem
                        text="{i18n>PriceFilterTextBT50_100}"
                        key="price_BT_50_100"
                    />
                    <ViewSettingsItem
                        text="{i18n>PriceFilterTextGT100}"
                        key="price_GT_100_X"
                    />
                </items>
            </ViewSettingsFilterItem>

             <ViewSettingsFilterItem
                text="{i18n>BookStatusLabel}"
                key="bookStatusFilter"
                multiSelect="false"
            >
                <items>
                    <ViewSettingsItem
                        text="{i18n>BookOkStatusText}"
                        key="status_EQ_{i18n>BookOkStatusText}_X"
                    />
                    <ViewSettingsItem
                        text="{i18n>BookInStockStatusText}"
                        key="status_EQ_{i18n>BookInStockStatusText}_X"
                    />
                     <ViewSettingsItem
                        text="{i18n>BookOutOfStockStatusText}"
                        key="status_EQ_{i18n>BookOutOfStockStatusText}_X"
                    />
                </items>
            </ViewSettingsFilterItem>
        </filterItems>
    </ViewSettingsDialog>
</core:FragmentDefinition>

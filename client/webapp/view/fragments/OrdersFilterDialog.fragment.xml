<core:FragmentDefinition
    xmlns="sap.m"
    xmlns:core="sap.ui.core"
>
    <ViewSettingsDialog
        confirm="onOrdersFilterDialogConfirm"
        resetFilters="onFiltersReset('orderDateFilter')"
        cancel="onFilterCancel('orderDateFilter')"
    >
        <filterItems>
            <ViewSettingsFilterItem
                text="{i18n>OrderIdLabel}"
                key="idFilter"
                items="{appModel>/orders}"
            >
                <items>
                    <ViewSettingsItem
                        text="{appModel>_id}"
                        key="_id-Contains-{appModel>_id}-X"
                    />
                </items>
            </ViewSettingsFilterItem>
            <ViewSettingsFilterItem
                text="{i18n>OrderIsbnLabel}"
                key="orderIsbnFilter"
                items="{appModel>/orders}"
            >
                <items>
                    <ViewSettingsItem
                        text="{appModel>isbn13}"
                        key="isbn13-Contains-{appModel>isbn13}-X"
                    />
                </items>
            </ViewSettingsFilterItem>
            <ViewSettingsFilterItem
                text="{i18n>OrderClientLabel}"
                key="orderClientFilter"
                items="{appModel>/orders}"
            >
                <items>
                    <ViewSettingsItem
                        text="{appModel>client}"
                        key="client-Contains-{appModel>client}-X"
                    />
                </items>
            </ViewSettingsFilterItem>
            <ViewSettingsCustomItem
                id="orderDateFilter"
                text="{i18n>OrderDateLabel}"
                key="orderDateFilter"
            >
                <customControl>
                    <DatePicker change="onOrdersDatePickerChange" />
                </customControl>
            </ViewSettingsCustomItem>
            <ViewSettingsFilterItem
                text="{i18n>OrderPriceLabel}"
                key="orderPriceFilter"
                multiSelect="false"
            >
                <items>
                    <ViewSettingsItem
                        text="{i18n>PriceFilterTextLE20}"
                        key="price-LE-20-X"
                    />
                    <ViewSettingsItem
                        text="{i18n>PriceFilterTextBT20_50}"
                        key="price-BT-20-50"
                    />
                    <ViewSettingsItem
                        text="{i18n>PriceFilterTextBT50_100}"
                        key="price-BT-50-100"
                    />
                    <ViewSettingsItem
                        text="{i18n>PriceFilterTextGT100}"
                        key="price-GT-100-X"
                    />
                </items>
            </ViewSettingsFilterItem>
            <ViewSettingsFilterItem
                text="{i18n>OrderStatusLabel}"
                key="bookStatusFilter"
                multiSelect="false"
            >
                <items>
                    <ViewSettingsItem
                        text="{i18n>OrderInProgressStatusText}"
                        key="status-EQ-{i18n>OrderInProgressStatusText}-X"
                    />
                    <ViewSettingsItem
                        text="{i18n>OrderReadyStatusText}"
                        key="status-EQ-{i18n>OrderReadyStatusText}-X"
                    />
                    <ViewSettingsItem
                        text="{i18n>OrderCancelledStatusText}"
                        key="status-EQ-{i18n>OrderCancelledStatusText}-X"
                    />
                    <ViewSettingsItem
                        text="{i18n>OrderIssuedStatusText}"
                        key="status-EQ-{i18n>OrderIssuedStatusText}-X"
                    />
                </items>
            </ViewSettingsFilterItem>
        </filterItems>
    </ViewSettingsDialog>
</core:FragmentDefinition>
